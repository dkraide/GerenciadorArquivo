@model Communication.Models.MFile
<div>
    <h3>Apagar arquivo</h3>
    <hr />
    <form method="post">
        <input asp-for="Id" hidden/>
        <input asp-for="UserId" hidden />
        <div class="row">
            <div class="form-group col-sm-8">
                <label>Arquivo</label>
                <input readonly class="form-control" placeholder="Arquivo" asp-for="FileName" />
            </div>
            <div class="form-group col-sm-4">
                <label>Nome de Usuario</label>
                <input readonly class="form-control" placeholder="Data" asp-for="CreatedAt" />
            </div>
        </div>
        <hr>
        <a type="button" class="btn btn-danger" href="/File/Index">Cancelar</a>
        <button type="submit" class="btn btn-success">Excluir</button>
    </form>
</div>