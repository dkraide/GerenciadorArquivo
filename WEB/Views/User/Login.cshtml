@model Communication.Models.MUser
<style>
   .child{
        margin-left: 30%;
   }
</style>
<div class="container">
    <form asp-controller="User" asp-action="Login" class="child">
        <h3>Entrar</h3>
        <div class="form-group col-sm-4">
            <label>Usuario</label>
            <input class="form-control" placeholder="Usuario" asp-for="UserName" />
        </div>
        <div class="form-group col-sm-4">
            <label>Senha</label>
            <input type="password"  class="form-control" placeholder="Senha" asp-for="PasswordHash" />
        </div>
        <button class="btn btn-success mt-2 col-sm-4" type="submit">Entrar</button>
    </form>
</div>